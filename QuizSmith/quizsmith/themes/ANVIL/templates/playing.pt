<metal:html 
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    use-macro="load: master.pt">
    
    <tal:block metal:fill-slot="js">
        <script type="text/javascript" src="${request.application_url}/themes/ANVIL/transitions.js"></script>
        <script type="text/javascript" src="${request.application_url}/themes/ANVIL/playing.js"></script>
        <noscript>
            <meta http-equiv="refresh" content="5;URL=${request.url}/accessibility?nojs=1">
        </noscript>
    </tal:block> 
    
    <tal:block metal:fill-slot="title">
        <title>Playing - Trivia : ${category.name}</title>
    </tal:block>  
    
    <tal:block metal:fill-slot="logo"></tal:block>  
    
    
    <tal:block metal:fill-slot="css">
        <style> 
            body { width: 1000px; }
            #content { padding-bottom: 0; }
        </style>
    </tal:block>
    
    
    
    <tal:block metal:fill-slot="content">
    
        <div id="playing-panel">
            <div class="left">
                <div>Question</div>
                <div class="question-counter"></div>
            </div>
            <div class="left">
                <div>Leaderboard Standings</div>
                <div class="ranking">TBD</div>
            </div>
            <div class="left">
                <div>Points Earned</div>
                <div class="points">0</div>
            </div>
            <div class="clear"></div>
        </div>
    
    
        <div id="timer" class="left">
            <img id="chain" src="${request.application_url}/themes/ANVIL/images/chain-swing-static.gif" src="chain" />
            <div class="falling-zone">
                <div class="falling-item"></div>
            </div>
            <div class="base normal"></div>
        </div>
        
    
        <div id="playing" class="left">
            <div id="countdown">
                Get Ready!
                <noscript>
                    <span style="font-size: 16px;">Redirecting you in 5 seconds to javascript disabled form.<span>
                </noscript>
            </div>
    
            <div id="transition">
                <div class="content">
                    <div id="question">
                    </div>
                    
                    <div id="answers">
                    </div>
                    
                </div>
            </div>
            
        </div>
        
        <div id="results">
            
            <div class="options">
                <a class="link next playgame">Next Question</a>
                <a class="link finish playgame">Finish</a>
            </div>
            
            <div id="result">
                <div id="status"></div>
                <div class="heading">Question</div>
                <div id="question"></div>
                <div id="answers"></div>
                
                <div class="heading">Tip</div>
                <div id="tip"></div>
                
                <div class="heading">Percentage</div>
                <div> Your score for this question is <span id="percentage"></span> </div>
                
                <div class="heading">Leaderboard Points</div>
                <div> <span id="competitive"></span> </div>
            </div>
            
            <div class="options">
                <a class="link next playgame">Next Question</a>
                <a class="link finish playgame">Finish</a>
            </div>
            <br />
            
        </div>
        
        <div class="clear"></div>
        
        <audio id="soundeffect" preload="auto">
            <source src="${request.application_url}/themes/ANVIL/thirdparty/squeak.ogg" type="audio/ogg" />
            <source src="${request.application_url}/themes/ANVIL/thirdparty/squeak.wav" type="audio/wav" />
            <source src="${request.application_url}/themes/ANVIL/thirdparty/squeak.mp3" type="audio/mpeg" />
        </audio> 
        
    </tal:block>
    
</metal:html>