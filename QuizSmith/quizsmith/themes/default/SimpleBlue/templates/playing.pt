<metal:html 
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    use-macro="load: master.pt">
    
    <tal:block metal:fill-slot="js">
        <script type="text/javascript" src="${request.application_url}/themes/${instance_id}/SimpleBlue/transitions.js"></script>
        <script type="text/javascript" src="${request.application_url}/themes/${instance_id}/SimpleBlue/playing.js"></script>
        <noscript>
            <meta http-equiv="refresh" content="5;URL=${request.url}/accessibility?nojs=1">
        </noscript>
    </tal:block> 
    
    <tal:block metal:fill-slot="title">
        <title>Playing - Trivia : ${category.name}</title>
    </tal:block>  
    
    <tal:block metal:fill-slot="logo"></tal:block>  
    
    <tal:block metal:fill-slot="content">
        <div id="playing-panel">
            <div class="left">
                <div>Question</div>
                <div class="question-counter"></div>
            </div>
            <div class="left">
                <div>Leaderboard Rank</div>
                <div class="ranking">TBD</div>
            </div>
            <div class="left">
                <div>Points Earned</div>
                <div class="points">0</div>
            </div>
            <div class="clear"></div>
        </div>
    
        <div id="playing">
    
            <div id="countdown">
                Get Ready!
                <noscript>
                    <span style="font-size: 16px;">Redirecting you in 5 seconds to javascript disabled form.<span>
                </noscript>
            </div>
    
            <div id="transition">
                <div id="question">
                </div>
                
                <div id="answers">
                </div>
                
                <div id="timer">
                    <div class="bar"></div>
                    <div class="time"></div>
                </div>

            </div>
            
        </div>
        
        <div id="results">
        
            <div class="options">
                <a class="link next">Next Question</a>
                <a class="link finish">Finish</a>
            </div>
            
            <div id="result">
                <div id="question"></div>
                <div id="status"></div>
                <div id="help">
                
                </div>
                
                <div id="scoretitle"> 
                    Your score for this question is
                    <span id="percentage"></span>
                    <br/>
                    and
                    <br/>
                    <span id="competitive"></span>
                </div>
                
            </div>
            
        </div>
        
    </tal:block>
    
</metal:html>