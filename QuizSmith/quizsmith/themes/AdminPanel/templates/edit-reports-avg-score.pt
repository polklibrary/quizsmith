<metal:html 
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    use-macro="load: edit-master.pt">
    
    
    <tal:block metal:fill-slot="title">
        <title>Edit - Trivia</title>
    </tal:block>  
    
     <tal:block metal:fill-slot="css">
        
        <link rel="stylesheet" href="${request.application_url}/themes/AdminPanel/jqx.base.css" type="text/css" />
        
        <style>
            #content {width: 100%}
            #edit-content {width: 80%}
            #edit-content #report th:first-child{width: 150px}
            
            #chart {
                margin: 0 auto;
                padding: 10px;
                height: 400px;
                width: 800px;
            }
            
            #edit-content  #report img {
                height: 100px;
                width: 100px;
            }
            #edit-content div.explain {
                padding: 15px;
            }

            #edit-content #report {
                border-radius: 0px;
            }
            #edit-content #report  thead th {
                border-radius: 0px;
            }
            #edit-content #report  td:first-child{
                text-align: center;
            }
            #edit-content #report td *[title] {
                cursor: help;
            }
            #edit-content #report  td{
                vertical-align: top;
            }
            #edit-content #report  div.answers{
                background-color: #cccccc;
                border: 1px solid #aaaaaa;
                border-radius: 5px;
                font-size: 9px;
                padding: 5px;
            }
            #edit-content #report  div.r{
                color:  #444444;
                font-style: italic;
                margin-left: 10px;
            }

        </style>
    </tal:block>  
    
    <tal:block metal:fill-slot="js">
        <script type="text/javascript" src="${request.application_url}/themes/AdminPanel/jqxcore.js"></script>
        <script type="text/javascript" src="${request.application_url}/themes/AdminPanel/jqxchart.js"></script>
        <script type="text/javascript" src="${request.application_url}/themes/AdminPanel/jqxdata.js"></script>
        
        <script type="text/javascript">
        
            jq(document).ready(function(){
                
                var  sampleData = ${dataset};
                    
                // prepare jqxChart settings
                var settings = {
                    title: "Average Scores through Attempts",
                    description: "",
                    backgroundColor: '#dddddd',
                    padding: { left: 5, top: 5, right: 5, bottom: 5 },
                    titlePadding: { left: 90, top: 0, right: 0, bottom: 10 },
                    source: sampleData,
                    categoryAxis:
                        {
                            dataField: 'Attempt',
                            showGridLines: false
                        },
                    colorScheme: 'scheme01',
                    seriesGroups:
                        [
                            {
                                type: 'column',
                                columnsGapPercent: 30,
                                seriesGapPercent: 0,
                                valueAxis:
                                {
                                    minValue: 0,
                                    maxValue: 100,
                                    unitInterval: 10,
                                    description: 'Percentage'
                                },
                                series: [
                                        { dataField: 'Score', displayText: 'Score'}
                                    ]
                            }
                        ]
                };
                
                // select the chartContainer DIV element and render the chart.
                jq('#chart').jqxChart(settings);
                
            });
            
        </script>
    </tal:block>  
    
    
    <tal:block metal:fill-slot="content">
    
        <div class="h3">Managing: Reports - Average Scores</div>
        
        <div class="standard">
            <h2 class="subheading">${category}</h2>
            <div id="chart"></div>
        </div>
        
    </tal:block>
    
</metal:html>